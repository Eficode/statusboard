#wrapper
  #overview.block
    .header
      #last-updated
        Last updated:
        %span.datetime -
      #uptime-period.hidden
        Uptime from
        %span
          %input{:type => 'text', :id => 'from', :class => 'datepicker', :name => 'from', :readonly => true}
          %input{:type => 'hidden', :id => 'actualdate-from', :class => 'datepicker-alt', :name => 'actualdate-from'}
        to
        %span
          %input{:type => 'text', :id => 'to', :class => 'datepicker', :name => 'to', :readonly => true}
          %input{:type => 'hidden', :id => 'actualdate-to', :class => 'datepicker-alt', :name => 'actualdate-to'}
        %a#update-uptime(href="#status") Update

      %ul#filter-options
        %li.active
          %a(href="#status") Status
        %li
          %a(href="#uptime") Uptime
    .body
      #service-status
        .name
          %h1= APP_CONFIG["service_name"]
        .statuses
          %dl.up-status
            %dt Up
            %dd.status 0
          %dl.down-status
            %dt Down
            %dd.status 0
      #service-uptime.hidden
        .name
          %h1= APP_CONFIG["service_name"]
        .statuses
          %dl.total-uptime
            %dt Total uptime
            %dd.status 0
  #nodes.block
    .header
      %span.name NODES
      %span.node-status STATUS
    .body
      #nodes